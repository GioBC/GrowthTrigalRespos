@model GrowthTrigal.Web.Models.MeasurementsViewModel

<div class="form-group">
    <label asp-for="Measure" class="control-label"></label>
    <input asp-for="Measure" class="form-control" />
    <span asp-validation-for="Measure" class="text-danger"></span>
</div>



<div class="form-group">
    <label asp-for="MeasureDate" class="control-label"></label>
    <input asp-for="MeasureDate" class="form-control" />
    <span asp-validation-for="MeasureDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="MeasurerId" class="control-label"></label>
    <select asp-for="MeasurerId" asp-items="Model.Measurers" class="form-control"></select>
    <span asp-validation-for="MeasurerId" class="text-danger"></span>
</div>
